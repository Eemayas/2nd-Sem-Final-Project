{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Car Race Game",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/car_race_game.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "ignoreFailures": true,
          "text": "-enable-pretty-printing"
        }
      ],
      "preLaunchTask": "build",
      "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
      // "C:\msys64\ucrt64\bin\gdb.exe"
      "internalConsoleOptions": "openOnSessionStart",
      "logging": {
        "engineLogging": true
      }
    }
  ]
}
